@model CaptchaMvc.Models.DefaultBuildInfoModel

<div class="col-sm-5">
    @Model.InputText

    @if (Model.IsRequired)
    {
        @Html.TextBox(Model.InputElementId, null, new Dictionary<string, object>
                                                  {
                                                      {"data-val", "true"},
                                                      {"data-val-required", Model.RequiredMessage},
                                                      {"class", "form-control" }
                                                  })
    }
    else
    {
        @Html.TextBox(Model.InputElementId)
    }
    @Html.ValidationMessage(Model.InputElementId, new { @class = "text-danger" })

</div>
<div class="col-sm-5">
    <img id="@Model.ImageElementId" src="@Model.ImageUrl" style="max-width:100%" />
    @Html.Hidden(Model.TokenElementId, Model.TokenValue)

    @{
        string id = Guid.NewGuid().ToString("N");
        string functionName = string.Format("______{0}________()", Model.TokenValue);
        <script type="text/javascript">
        @*$(function () {
            $('#@id').show();
        });*@

        function @functionName {
                $('#@id').hide();
                $.post("@Model.RefreshUrl", { @Model.TokenParameterName: $('#@Model.TokenElementId').val() },
                function () {
                    $('#@id').show();
                });
            return false;
        }
        </script>
        <a href="#@Model.InputElementId" id="@id" onclick="@functionName">@Model.RefreshButtonText</a>
    }
</div>
