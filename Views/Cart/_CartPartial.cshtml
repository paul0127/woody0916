@model WoodyIconShopModel.Models.Cart.Cart
@{ 


}


<a href="#" class="dropdown-toggle" data-toggle="dropdown">購物車 <span class="badge">@String.Format("{0}", Model.Count)</span><b class="caret"></b></a>
<ul class="dropdown-menu shop_cart-menu">
    @if (Model.Count > 0)
    {
        foreach (var cartitem in Model)
        {
            <li class="col-xs-12">
                <span>@cartitem.Name X @cartitem.Quantity </span>
                <span class="pull-right">$@String.Format("{0:n0}", cartitem.Amount)</span>
            </li>
        }

        <li class="divider"></li>
        <li class="text-right"><span>總計$<label id="cart_total">@String.Format("{0:n0}", Model.TotalAmount)</label></span></li>
        <li class="divider"></li>
        <li>
            <div id="CartButtons" class="col-xs-12">
                <a class="btn btn-custom text-center col-xs-12" href="@Url.Action("Cart", "Pay", new { })">立即結帳</a>
            </div>
        </li>
    }
    else
    {
        <li><a class="btn btn-default text-center" href="#">購物車無任何商品</a></li>
    }
</ul>


@if (ViewBag.message != null)
{
    <script>
        alert('@ViewBag.message');
    </script>
}